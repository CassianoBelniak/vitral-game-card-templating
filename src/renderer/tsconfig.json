{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "Node16",
        "moduleResolution": "node16",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["vite/client"]
    },
    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
    "vueCompilerOptions": {
        "plugins": ["@vue/language-plugin-pug"]
    }
}
